<?xml version="1.0" encoding="utf-8"?>
<selector xmlns:android="http://schemas.android.com/apk/res/android">
    <item android:state_checked="true">
        <shape android:shape="oval">
            <gradient android:startColor="@color/color_knob_start"
                android:endColor="@color/color_knob_end"/>
            <size android:width="23.72dp"
                android:height="23.72dp"/>
        </shape>
    </item>
    <item>
        <shape android:shape="oval">
            <stroke android:width="2dp" android:color="@color/color_ring_checkbox_off"/>
            <size android:width="23.72dp"
                android:height="23.72dp"/>
        </shape>
    </item>
</selector>